<div class="container">
  <p id="notice" class="mt-4"><%= notice %></p>
  <div class="row">
    <div class="col-6">
      <div id="formContent" class="text-left mt-3">
        <div class="field">
          <% if @post.image.attached? %>
            <p class="card-image"><%= image_tag(@post.image) %></p>
          <% end %>
        </div>
        <h4 class="modal-title"><%= @post.title %></h4>
        <div class="pt-4">
          <div class="field">
            <%= simple_format(@post.body) %>
          </div>
        </div>
        <%= link_to 'Back', posts_path, class: "fadeIn fourth mt-4 btn-primary back-btn px-0" %>
      </div>
    </div>
    <div class="col-6">
      <div id="formContent" class="text-left mt-3">
        <h4 class="modal-title text-center">Comments</h4>
        <hr>
        <%= form_with(model: [@post, @post.comments.build]) do |f| %>
          <div class="pt-4">
            <div class="field">
              <%= f.label 'New comment', class:"mb-0" %><br>
              <%= f.text_area :body, class: "fadeIn second body-text-field"%>
            </div>
          </div>
          <%= f.submit 'Submit', class: "fadeIn fourth mt-4 btn-primary back-btn px-0" %>
          <div class="pt-4">
            <%= render @post.comments %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>